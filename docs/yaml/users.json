{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"definitions": {
		"users": {
			"id": "/users",
			"title": "Users",
			"description": "Users Database",
			"type": "object",
			"properties": {
				"id": {
					"desciption": "Unique ID for User",
					"type": "string"
				},
				"firstname": {
					"description": "User First Name",
					"type": "string"
				},
				"lastname": {
					"description": "User Last Name",
					"type": "string"
				},
				"username": {
					"description": "Login Name",
					"type": "string"
				},
				"about": {
					"description": "Other information of user",
					"type": "string"
				},
				"password": {
					"description": "User password",
					"type": "string"
				},
				"passwordsalt": {
					"description": "Password Harshing",
					"type": "string"
				},
				"email": {
					"description": "User email",
					"type": "string"
				},
				"avatarurl": {
					"description": "User avatar's URL",
					"type": "string"
				}
			},
			"required": ["title", "allText", "authorID"]
		}
	}
}
    
    
    